datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  email          String       @unique
  password       String
  stripeUserId   String
  profileImage   String?
  phone          String?
  address        String?
  licenceUrl     String?
  barAssociation String?
  licenceNumber  String?
  experience     Int?
  serviceType    TServiceType?
  specialization String[]
  role           UserRole
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@map("users")
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  otpCode   String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("otps")
}

model LegalService {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  serviceName String   @unique
  overview    String
  features    String[]
  serviceIcon String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("legalServices")
}

enum UserRole {
  ADMIN
  USER
  LAWYER
}

enum TServiceType {
  Online
  In_Person
  Both
}
